generator client {
  provider      = "prisma-client"
  output        = "../app/generated/prisma"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}

model ticket {
  id          String        @id @default(uuid())
  title       String
  description String?
  status      ticket_status @default(TODO)
  assignedTo  String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime
}

enum ticket_status {
  TODO
  IN_PROGRESS
  DONE
  REJECTED
}
